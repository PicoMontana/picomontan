    <script>
      document.addEventListener("DOMContentLoaded", function() {
      var starFilters = document.querySelectorAll(".star-filter");
      var cards = document.querySelectorAll(".card");

      starFilters.forEach(button => {
        button.addEventListener('click', () => {
          const selectedStars = parseInt(button.dataset.stars);

          cards.forEach(function(card) {
            var stars = parseInt(card.getAttribute("data-stars"));
            if (selectedStars === 0 || stars === selectedStars) {
              card.style.display = "block";
            } else {
              card.style.display = "none";
            }
          });
        });
      });
    });
