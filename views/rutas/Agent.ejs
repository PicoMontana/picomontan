      <script>
        let comments = [];
        let currentRating = 0;

        function setRating(rating) {
          currentRating = rating;
          const stars = document.querySelectorAll('.star');
          stars.forEach((star, index) => {
            star.classList.toggle('selected', index < rating);
          });
          document.getElementById('ratingInput').value = rating;
        }

        function submitComment() {
          const commentInput = document.getElementById('commentInput');
          const categorySelect = document.getElementById('categorySelect');
          const commentText = commentInput.value.trim();
          const category = categorySelect.value;
          const rating = currentRating;

          if (commentText) {
            const comment = {
              id: comments.length + 1,
              text: commentText,
              category: category,
              rating: rating,
              replies: []
            };
            comments.push(comment);
            commentInput.value = '';
            categorySelect.value = '';
            currentRating = 0;
            setRating(0);
            renderComments();
          }
        }

        function renderComments() {
          const commentsContainer = document.getElementById('comments');
          commentsContainer.innerHTML = '';

          comments.forEach(comment => {
            const commentDiv = document.createElement('div');
            commentDiv.className = 'comment';
            commentDiv.innerHTML = `
                      <p><strong>${comment.category}</strong> - Calificación: ${'★'.repeat(comment.rating)}${'☆'.repeat(5 - comment.rating)}</p>
                      <p>${comment.text}</p>
                      <button onclick="showReplyForm(${comment.id})">Responder</button>
                      <div class="reply-form" id="reply-form-${comment.id}">
                          <textarea placeholder="Escribe una respuesta..."></textarea>
                          <button onclick="submitReply(${comment.id})">Enviar Respuesta</button>
                      </div>
                      <div class="replies" id="replies-${comment.id}"></div>
                  `;
            commentsContainer.appendChild(commentDiv);

            // Renderizar respuestas
            comment.replies.forEach(reply => {
              const replyDiv = document.createElement('div');
              replyDiv.className = 'reply';
              replyDiv.innerHTML = `<p>${reply.text}</p>`;
              document.getElementById(`replies-${comment.id}`).appendChild(replyDiv);
            });
          });
        }

        function showReplyForm(commentId) {
          const replyForm = document.getElementById(`reply-form-${commentId}`);
          replyForm.style.display = replyForm.style.display === 'block' ? 'none' : 'block';
        }

        function submitReply(parentId) {
          const replyTextarea = document.querySelector(`#reply-form-${parentId} textarea`);
          const replyText = replyTextarea.value.trim();

          if (replyText) {
            const parentComment = comments.find(comment => comment.id === parentId);
            const reply = {
              id: parentComment.replies.length + 1,
              text: replyText
            };
            parentComment.replies.push(reply);
            replyTextarea.value = '';
            renderComments();
          }
        }
      </script>

      <script>
        let slideIndices = {};
        let slideTimeouts = {};

        function showSlides(slideshowContainer) {
          let slides = slideshowContainer.querySelectorAll('.mySlides');
          let slideIndex = slideIndices[slideshowContainer] || 0;
          for (let i = 0; i < slides.length; i++) {
            slides[i].style.display = "none";
          }
          slideIndex++;
          if (slideIndex > slides.length) {
            slideIndex = 1;
          }
          slides[slideIndex - 1].style.display = "block";
          slideIndices[slideshowContainer] = slideIndex;
          slideTimeouts[slideshowContainer] = setTimeout(() => showSlides(slideshowContainer), 2000); // Cambia la imagen cada 3 segundos
        }

        function startSlideshow(slideshowContainer) {
          if (!slideTimeouts[slideshowContainer]) {
            showSlides(slideshowContainer);
          }
        }

        function stopSlideshow(slideshowContainer) {
          clearTimeout(slideTimeouts[slideshowContainer]);
          slideTimeouts[slideshowContainer] = null;
        }

        document.addEventListener('DOMContentLoaded', () => {
          document.querySelectorAll('.slideshow-container').forEach(container => {
            let slides = container.querySelectorAll('.mySlides');
            if (slides.length > 0) {
              slides[0].style.display = "block";
            }

            container.parentElement.addEventListener('mouseenter', () => startSlideshow(container));
            container.parentElement.addEventListener('mouseleave', () => stopSlideshow(container));
          });
        });

        //estrellas 

        function mostrarTodos() {
          document.querySelectorAll('.product-card').forEach(card => {
            card.style.display = 'block';
          });
        }

        function mostrarPorEstrellas(estrellas) {
          document.querySelectorAll('.product-card').forEach(card => {
            if (card.querySelector('.rating .star').length >= estrellas) {
              card.style.display = 'block';
            } else {
              card.style.display = 'none';
            }
          });
        }

        //favoritos

        document.addEventListener('DOMContentLoaded', function () {
          const favoriteButtons = document.querySelectorAll('.add-to-favorites');

          favoriteButtons.forEach(button => {
            button.addEventListener('click', function () {
              const productCard = button.closest('.product-card');
              const productId = productCard.getAttribute('data-id');
              const productInfo = {
                id: productId,
                imgSrc: productCard.querySelector('img').getAttribute('src'),
                title: productCard.querySelector('h2').innerText,
                description: productCard.querySelector('p').innerText,
                price: productCard.querySelector('.price p').innerText, // Este campo no existe en tu HTML, verifica si necesitas eliminarlo o agregarlo.
              };

              // Retrieve favorites from local storage or initialize an empty array
              let favorites = JSON.parse(localStorage.getItem('favorites')) || [];

              // Add the current product to the favorites
              favorites.push(productInfo);

              // Save the updated favorites back to local storage
              localStorage.setItem('favorites', JSON.stringify(favorites));

              alert('Añadido a favoritos!');
            });
          });
        });

