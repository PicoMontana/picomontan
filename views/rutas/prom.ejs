<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tienda Online Premium</title>
    <link rel="stylesheet" href="/css/styles1.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <header>
        <nav>
            <div class="logo">
                <i class="fas fa-shopping-cart"></i> Tienda PicoMontaña
            </div>
            <div class="menu">
                <a href="/usuario/user" id="inicio"><i class="fas fa-home"></i> Inicio</a>
                <a href="/produc1" id="productos"><i class="fas fa-box-open"></i> Promociones</a>
                <a href="#" id="favoritos"><i class="fas fa-heart"></i> Favoritos</a>
                <a href="#" id="carrito">
                    <i class="fas fa-shopping-cart"></i> Carrito 
                    (<span id="contador-carrito">0</span>)
                </a>
            </div>
        </nav>
    </header>

    <main>
        <section id="catalogo-productos" class="catalogo"></section>

        <!-- Modal Carrito -->
        <div id="modal-carrito" class="modal">
            <div class="modal-contenido">
                <span class="cerrar">&times;</span>
                <h2>Carrito de Compras</h2>
                <div id="lista-carrito"></div>
                <div id="total-carrito">Total: $0</div>
                <button id="comprar">Procesar Compra</button>
            </div>
        </div>

        <!-- Modal Compra -->
        <div id="modal-compra" class="modal">
            <div class="modal-contenido">
                <span class="cerrar">&times;</span>
                <h2>Finalizar Compra</h2>
                <form id="formulario-compra">
                    <input type="text" placeholder="Nombre Completo" required>
                    <input type="email" placeholder="Correo Electrónico" required>
                    <input type="text" placeholder="Dirección" required>
                    <select id="metodo-pago">
                        <option>Tarjeta de Crédito</option>
                        <option>Tarjeta de Débito</option>
                        <option>PayPal</option>
                    </select>
                    <input type="text" placeholder="Número de Tarjeta" required>
                    <button type="submit">Confirmar Compra</button>
                </form>
            </div>
        </div>

        <!-- Modal Favoritos -->
        <div id="modal-favoritos" class="modal">
            <div class="modal-contenido">
                <span class="cerrar">&times;</span>
                <h2>Mis Favoritos</h2>
                <div id="lista-favoritos"></div>
            </div>
        </div>

        <!-- Notificaciones -->
        <div id="notificaciones"></div>
    </main>

    <script src="/js/script.js"></script>
</body>
</html>