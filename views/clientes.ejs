<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestión de Clientes</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style> 
        /* Estilos para la sección de contacto */
        .contact {
            display: flex;
            justify-content: center;
            /* Centra los íconos */
            margin-top: 20px;
        }

        .contact a {
            margin: 0 10px;
            /* Espaciado entre íconos */
            font-size: 30px;
            /* Tamaño de los íconos */
            color: #333;
            /* Color de los íconos */
            transition: color 0.3s;
            /* Transición suave para el color */
        }

        .contact a:hover {
            color: #007bff;
            /* Color al pasar el mouse */
        }
        h2 {
            font-size: 24px;
            /* Tamaño de fuente para el título */
            text-align: center;
            /* Centra el título */
            margin-bottom: 10px;
            /* Margen inferior */
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Gestión de Clientes</h1>
        
        <!-- Formulario de Creación de Cliente -->
        <div class="card mb-4">
            <div class="card-header">
                Crear Nuevo Cliente
            </div>
            <div class="card-body">
                <form id="clientForm">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="nombre" class="form-label">Nombre Completo</label>
                            <input 
                                type="text" 
                                class="form-control" 
                                id="nombre" 
                                placeholder="Ingrese nombre completo" 
                                required
                            >
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="email" class="form-label">Correo Electrónico</label>
                            <input 
                                type="email" 
                                class="form-control" 
                                id="email" 
                                placeholder="Ingrese correo electrónico" 
                                required
                            >
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="telefono" class="form-label">Teléfono</label>
                            <input 
                                type="tel" 
                                class="form-control" 
                                id="telefono" 
                                placeholder="Ingrese número de teléfono" 
                                required
                            >
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="direccion" class="form-label">Dirección</label>
                            <input 
                                type="text" 
                                class="form-control" 
                                id="direccion" 
                                placeholder="Ingrese dirección" 
                                required
                            >
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Crear Cliente
                    </button>
                </form>
            </div>
        </div>

        <!-- Tabla de Clientes -->
        <div class="card">
            <div class="card-header">
                Lista de Clientes
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped" id="clientTable">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Email</th>
                                <th>Teléfono</th>
                                <th>Dirección</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Los clientes se cargarán dinámicamente aquí -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- Nueva sección de contacto con íconos -->
    <div class="section" id="contact">
        <h2>Contáctanos</h2>
        <div class="contact">
            <a href="https://wa.me/1234567890" target="_blank"><i class="fab fa-whatsapp"></i></a>
            <!-- Ícono de WhatsApp -->
            <a href="https://www.facebook.com/tu_pagina" target="_blank"><i class="fab fa-facebook-f"></i></a>
            <!-- Ícono de Facebook -->
            <a href="mailto:tuemail@ejemplo.com"><i class="fas fa-envelope"></i></a> <!-- Ícono de Email -->
        </div>
    </div>

    <!-- Bibliotecas JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Tu script personalizado -->
    <script>
        // Configuración base de Axios
        axios.defaults.baseURL = 'http://localhost:3000'; // Ajusta según tu backend
        axios.defaults.headers.common['Content-Type'] = 'application/json';
    </script>
    <script src="/js/controlerClientes.js"></script>
</body>
</html>